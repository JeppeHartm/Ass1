<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/bgColor"
    android:padding="20dp"
    tools:context="com.bestapps.jeppe.testapp.EvalActivity">
    <ImageView
        android:padding="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/stats1"
        android:src="@drawable/stats1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        />
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/stats2"
        android:src="@drawable/stats2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/indicator"
        android:src="@drawable/so1"
        android:layout_width="wrap_content"
        android:layout_height="10dp" />
</RelativeLayout>
